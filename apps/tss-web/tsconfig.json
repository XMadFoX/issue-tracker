{
	"compilerOptions": {
		"target": "ES2022",
		"jsx": "react-jsx",
		"module": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"types": ["vite/client"],

		"moduleResolution": "bundler",
		"verbatimModuleSyntax": false,
		"noEmit": true,

		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"noUncheckedSideEffectImports": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*",
				"../../packages/blocks/src/*",
				"../../packages/ui/src/*"
			],
			"@prism/api": ["../../packages/api/src/index.ts"],
			"@prism/api/*": ["../../packages/api/src/*"],
			"@prism/blocks/*": ["../../packages/blocks/src/*"],
			"@prism/ui/*": ["../../packages/ui/src/*"],
			"db": ["../../packages/db/src/index.ts"],
			"db/*": ["../../packages/db/src/*"]
		}
	},
	"include": ["src", "vite.config.ts"]
}
